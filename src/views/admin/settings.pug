extends ../layouts/index
block contenido 
    .grid.grid-cols-1.px-4.text-center.text-center(class='xl:grid-cols-3 xl:gap-4 dark:bg-gray-900')
      .mb-4.col-span-full(class='xl:mb-2') 
        h1.text-xl.font-semibold.text-gray-900(class='sm:text-2xl dark:text-white') Configuracion de usuario
      // Right Content
      .col-span-2
        .p-4.mb-4.bg-white.border.border-gray-200.rounded-lg.shadow-sm(class='2xl:col-span-2 dark:border-gray-700 sm:p-6 dark:bg-gray-800')
          h3.mb-4.text-xl.font-semibold(class='dark:text-white') Información general
          form(action='#')
            .grid.grid-cols-6.gap-6
              .col-span-6(class='sm:col-span-3')
                label.block.mb-2.text-sm.font-medium.text-gray-900(for='first-name' class='dark:text-white') Nombres
                input#first-name.shadow-sm.bg-gray-50.border.border-gray-300.text-gray-900.rounded-lg.block.w-full(type='text' name='first-name' class='sm:text-sm focus:ring-primary-500 focus:border-primary-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500' placeholder='Nombre' required='')
              .col-span-6(class='sm:col-span-3')
                label.block.mb-2.text-sm.font-medium.text-gray-900(for='last-name' class='dark:text-white') Apellidos
                input#last-name.shadow-sm.bg-gray-50.border.border-gray-300.text-gray-900.rounded-lg.block.w-full(type='text' name='last-name' class='sm:text-sm focus:ring-primary-500 focus:border-primary-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500' placeholder='Apellido' required='')
              .col-span-6(class='sm:col-span-3')
                label.block.mb-2.text-sm.font-medium.text-gray-900(for='city' class='dark:text-white') Ciudad
                input#city.shadow-sm.bg-gray-50.border.border-gray-300.text-gray-900.rounded-lg.block.w-full(type='text' name='city' class='sm:text-sm focus:ring-primary-500 focus:border-primary-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500' placeholder='e.j. Bucaramanga' required='')
              .col-span-6(class='sm:col-span-3')
                label.block.mb-2.text-sm.font-medium.text-gray-900(for='email' class='dark:text-white') Email
                input#email.shadow-sm.bg-gray-50.border.border-gray-300.text-gray-900.rounded-lg.block.w-full(type='email' name='email' class='sm:text-sm focus:ring-primary-500 focus:border-primary-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500' placeholder='ejemplo@uts.edu.co' required='')
              .col-span-6(class='sm:col-span-3')
                label.block.mb-2.text-sm.font-medium.text-gray-900(for='phone-number' class='dark:text-white') Numero telefonico
                input#phone-number.shadow-sm.bg-gray-50.border.border-gray-300.text-gray-900.rounded-lg.block.w-full(type='number' name='phone-number' class='sm:text-sm focus:ring-primary-500 focus:border-primary-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500' placeholder='e.j. 317...' required='')
              .col-span-6(class='sm:col-span-3')
                label.block.mb-2.text-sm.font-medium.text-gray-900(for='birthday' class='dark:text-white') Cumpleaños
                input#birthday.shadow-sm.bg-gray-50.border.border-gray-300.text-gray-900.rounded-lg.block.w-full(type='number' name='birthday' class='sm:text-sm focus:ring-primary-500 focus:border-primary-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500' placeholder='25/06/2001' required='')
              .col-span-6(class='sm:col-span-3')
                label.block.mb-2.text-sm.font-medium.text-gray-900(for='role' class='dark:text-white') Rol
                div
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="rol") Rol
                  select#rol.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="rol")
                      option(value="") - Seleccione el rol -
                      if roles.data
                        each rol in roles.data
                          option(value=rol.id selected= datos.rol ? datos.rol == rol.id ? true : false : null)= rol.nombre
              .col-span-6(class='sm:col-span-3')
                label.block.mb-2.text-sm.font-medium.text-gray-900(for='department' class='dark:text-white') Departamento
                input#department.shadow-sm.bg-gray-50.border.border-gray-300.text-gray-900.rounded-lg.block.w-full(type='text' name='department' class='sm:text-sm focus:ring-primary-500 focus:border-primary-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500' placeholder='Departamento' required='')
              .col-span-6(class='sm:col-full')
                .flex.flex-row-reverse
                  button.text-white.bg-blue-700.font-medium.rounded-lg.text-sm.px-5.text-center(class='hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 py-2.5 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800' type='submit')
                    | Guardar
      .col-span-full(class='xl:col-auto')  
        .p-4.mb-4.bg-white.border.border-gray-200.rounded-lg.shadow-sm(class='2xl:col-span-2 dark:border-gray-700 sm:p-6 dark:bg-gray-800')
          h3.mb-4.text-xl.font-semibold(class='dark:text-white') Información de contraseña
          form(action='#')
            .grid.grid-cols-6.gap-6
              .col-span-6(class='sm:col-span-3')
                label.block.mb-2.text-sm.font-medium.text-gray-900(for='current-password' class='dark:text-white') Contraseña actual
                input#current-password.shadow-sm.bg-gray-50.border.border-gray-300.text-gray-900.rounded-lg.block.w-full(type='password' name='current-password' class='sm:text-sm focus:ring-primary-500 focus:border-primary-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500' placeholder='••••••••' required='')
              .col-span-6(class='sm:col-span-3')
                label.block.mb-2.text-sm.font-medium.text-gray-900(for='password' class='dark:text-white') Nueva contraseña
                input#password.bg-gray-50.border.border-gray-300.text-gray-900.text-sm.rounded-lg.block.w-full(data-popover-target='popover-password' data-popover-placement='bottom' type='password' class='focus:ring-blue-500 focus:border-blue-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' placeholder='••••••••' required='')
                #popover-password.absolute.z-10.invisible.inline-block.text-sm.font-light.text-gray-500.transition-opacity.duration-300.bg-white.border.border-gray-200.rounded-lg.shadow-sm.opacity-0.w-72(data-popover='' role='tooltip' class='dark:bg-gray-800 dark:border-gray-600 dark:text-gray-400')
                  .p-3.space-y-2
                    h3.font-semibold.text-gray-900(class='dark:text-white') Debe tener al menos 6 caracteres
                    .grid.grid-cols-4.gap-2
                      .h-1.bg-orange-300(class='dark:bg-orange-400')
                      .h-1.bg-orange-300(class='dark:bg-orange-400')
                      .h-1.bg-gray-200(class='dark:bg-gray-600')
                      .h-1.bg-gray-200(class='dark:bg-gray-600')
                    p Es mejor tener:
                    ul
                      li.flex.items-center.mb-1
                        svg.w-4.h-4.mr-2.text-green-400(class='dark:text-green-500' aria-hidden='true' fill='currentColor' viewbox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
                          path(fill-rule='evenodd' d='M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z' clip-rule='evenodd')
                        |                                         Mayúsculas y minúsculas
                      li.flex.items-center.mb-1
                        svg.w-4.h-4.mr-2.text-gray-300(class='dark:text-gray-400' aria-hidden='true' fill='currentColor' viewbox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
                          path(fill-rule='evenodd' d='M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z' clip-rule='evenodd')
                        |                                         Un símbolo (#$&amp;)
                      li.flex.items-center
                        svg.w-4.h-4.mr-2.text-gray-300(class='dark:text-gray-400' aria-hidden='true' fill='currentColor' viewbox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
                          path(fill-rule='evenodd' d='M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z' clip-rule='evenodd')
                        |                                         Una contraseña más larga (min. 12 chars.)
                  div(data-popper-arrow='')
              .col-span-6(class='sm:col-span-3')
                label.block.mb-2.text-sm.font-medium.text-gray-900(for='confirm-password' class='dark:text-white') Confirmar contraseña
                input#confirm-password.shadow-sm.bg-gray-50.border.border-gray-300.text-gray-900.rounded-lg.block.w-full(type='password' name='confirm-password' class='sm:text-sm focus:ring-primary-500 focus:border-primary-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500' placeholder='••••••••' required='')
              .col-span-6(class='sm:col-full')
                .flex.flex-row-reverse
                    button.text-white.bg-blue-700.font-medium.rounded-lg.text-sm.px-5.text-center(class='hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 py-2.5 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800' type='submit') Guardar    