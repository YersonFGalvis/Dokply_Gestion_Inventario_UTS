    include ../modals/edificio
    .flex.flex-col
          .overflow-x-auto.rounded-lg
            .inline-block.min-w-full.align-middle
              .overflow-hidden.shadow(class='sm:rounded-lg')
                table.min-w-full.divide-y.divide-gray-200(class='dark:divide-gray-600')
                  thead.bg-gray-50(class='dark:bg-gray-700')
                    tr
                      th.p-4.text-xs.font-medium.tracking-wider.text-left.text-gray-500.uppercase(scope='col' class='dark:text-white w-1/2')
                        | Nombre
                      th.p-4.text-xs.font-medium.tracking-wider.text-left.text-gray-500.uppercase(scope='col' class='dark:text-white w-1/2')
                        | Letra
                      th.p-4.text-xs.font-medium.tracking-wider.text-left.text-gray-500.uppercase(scope='col' class='dark:text-white w-1/2')
                        | Acciones
                  tbody.bg-white(class='dark:bg-gray-800')
                    if edificios.error 
                      tr
                        td.p-4.text-sm.text-center.font-normal.text-gray-900.whitespace-nowrap(class='dark:text-white' colspan = '2')
                           = edificios.error
                    else 
                        each edificio in edificios.data
                            tr(class = 'hover:bg-gray-100')
                              td.p-4.text-sm.font-normal.text-gray-900.whitespace-nowrap(class='dark:text-white w-1/2')
                                = edificio.nombre
                              td.p-4.text-sm.font-normal.text-gray-900.whitespace-nowrap(class='dark:text-white w-1/2')
                                = edificio.letra
                              td.p-4.whitespace-nowrap(class='w-1/2')
                                button.group.text-blue-700.border.border-blue-700.font-medium.rounded-lg.text-sm.px-5.text-center.me-2.mb-2(class='hover:text-white hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 py-2.5 dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-blue-500 dark:focus:ring-blue-800')
                                    svg.w-6.h-6.text-blue-700(class='group-hover:text-white dark:text-white' aria-hidden='true' xmlns='http://www.w3.org/2000/svg' width='24' height='24' fill='none' viewbox='0 0 24 24')
                                        path(stroke='currentColor' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='m14.304 4.844 2.852 2.852M7 7H4a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-4.5m2.409-9.91a2.017 2.017 0 0 1 0 2.853l-6.844 6.844L8 14l.713-3.565 6.844-6.844a2.015 2.015 0 0 1 2.852 0Z')
