doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Error #{error_code}
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")
  body(class='bg-gray-100')
    header
        include ../layouts/sideBar 
    .h-screen.flex.items-center.justify-center
        .bg-white.p-10.rounded-lg.shadow-lg.text-center
            h1.text-9xl.font-bold.text-red-500= error_code
            h2.text-4xl.font-semibold.text-gray-700.mt-4= error_title
            p.text-lg.text-gray-500.mt-2= error_message
            .mt-6
                a.text-indigo-500(class='hover:text-indigo-700.text-lg.font-medium.inline-flex').items-center(href="/dashboard")
